# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
  alias vim='mvim'
fi

alias aliases='vim ~/.bash/aliases'
alias g='git status'
alias gc='git commit'
alias gca='git commit -a'
alias gcm='git commit -m'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
# alias get='sudo apt-get install'
alias gg='git lg'
alias ll='ls -la'

alias retag='ctags --exclude=.svn --exclude=.git --exclude=log -R *'
alias rdm="rake db:migrate"
alias rdtp="rake db:test:prepare"
alias rc='rails console'
alias rs='rails server -p 3001'

alias sc='script/console'
alias so='source ~/.bash/aliases'
alias ss='ruby script/server -p 3001 --debugger'

alias psd="open -a Adobe\ Photoshop\ CS5"
